{% extends 'base.html.twig' %}

{% block content %}
<h1>Liste des posts</h1>
    {% for post in posts %}
        <h2>{{ post.titre }}</h2>

        <p>{{ post.message }}</p>
        <p>{{ post.datePublication|date('d/m/Y') }}</p>
        <a href="{{ path('app_post_edit', {id:post.id}) }}">Modifier</a> | <a href="{{ path('app_post_delete', {id:post.id}) }}">Supprimer</a>
        <hr>
    {% endfor %}
{% endblock %}

