{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block content %}
    <h1>{{ post.titre }}</h1>
    <i>Catégorie : {{ post.category.libelle }}</i>
    <p>{{ post.message }}</p>
    <i>{{ post.datePublication|date('d/m/Y H:i:s') }} (post N° {{ post.id }})</i>
{% endblock %}
